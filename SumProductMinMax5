package assignment;

import java.util.Scanner;

public class SumProductMinMax5 {

	public static void main(String[] args) {
		Scanner add = new Scanner(System.in);
		System.out.println("Enter any five numbes, to get their addition and product and to find  min and max");
		int num1=add.nextInt();//first entered number
		int num2=add.nextInt();// second entered number
		int num3=add.nextInt();// third entered number
		int num4=add.nextInt();//fourth entered number
		int num5=add.nextInt();// fifth entered number
		int sum =num1+num2+num3+num4+num5;// addition of five entered numbers
		int product = num1*num2*num3*num4*num5;// product of three entered numbers
		System.out.println("The sum of five numbers is  :"+sum);
		System.out.println("The product of five numbers is  :"+product);
		
		int min =num1;
		if(num2<min) {min=num2;}
		if(num3<min) {min=num3;}
		if(num4<min) {min=num4;}
		if(num5<min) {min=num5;}
		
		int max =num1;
		if(num2>max) {max=num2;}
		if(num3>max) {max=num3;}
		if(num4>max) {max=num4;}
		if(num5>max) {max=num5;}
		System.out.println("Min is :"+min);
		System.out.println("Max is :"+max);

	}

}
